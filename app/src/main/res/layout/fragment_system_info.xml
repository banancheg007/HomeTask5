<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">

    <TextView
            android:id="@+id/textview_internet_connection_details"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:layout_margin="5dp"/>

    <TextView
            android:id="@+id/textview_device_charging_state"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/please_reconnect_charger"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:layout_margin="5dp"/>

    <TextView
            android:id="@+id/textview_headphones_or_headset_plugged"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/back"
            android:layout_margin="5dp"/>

    <TextView
            android:id="@+id/textview_current_date_and_time_zone"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:background="@drawable/back"
            android:gravity="center"
            android:layout_margin= "5dp"/>

</LinearLayout>